<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <!-- genres -->
    <fragment
        android:id="@+id/genresFragment"
        android:name="com.speakingcode.freemusicarchive.android.genres.GenresViewerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />
    
    <!-- albums -->
    <fragment
        android:id="@+id/albumsFragment"
        android:name="com.speakingcode.freemusicarchive.android.albums.AlbumsViewerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <!-- tracks -->
    <fragment
        android:id="@+id/tracksFragment"
        android:name="com.speakingcode.freemusicarchive.android.tracks.TracksViewerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>